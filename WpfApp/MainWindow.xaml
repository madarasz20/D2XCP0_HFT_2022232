<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowVM/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Label Content="Welcome to the App!" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
            <Label Content="Take a look around, then choose your desired function!" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
            <Button Content="Author Editor" Height="50" FontSize="20" Margin="10" Padding="10" Click="Button_Click" />
            <Button Content="Book Editor" Height="50" FontSize="20" Margin="10" Padding="10" Click="Button_Click_1" />
            <Button Content="Genre Editor" Height="50" FontSize="20" Margin="10" Padding="10" Click="Button_Click_2" />
        </StackPanel>
    </Grid>
</Window>
